---
replicas: {{ minio_replicas }}

existingSecret: minio-credentials

persistence:
  enabled: true
  size: {{ minio_storage_size }}

securityContext:
  enabled: true
  runAsUser: 1000
  runAsGroup: 1000
  fsGroup: 1000

resources:
  requests:
    memory: 512Mi
    cpu: 250m

ingress:
  enabled: true
  ingressClassName: traefik
  annotations:
    traefik.ingress.kubernetes.io/router.entrypoints: web
  hosts:
    - {{ minio_ingress_host }}
  tls: []

consoleIngress:
  enabled: true
  ingressClassName: traefik
  annotations:
    traefik.ingress.kubernetes.io/router.entrypoints: web
  hosts:
    - {{ minio_console_ingress_host }}
  tls: []
