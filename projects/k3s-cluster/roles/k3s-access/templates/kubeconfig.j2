apiVersion: v1
kind: Config
clusters:
  - cluster:
      certificate-authority-data: {{ cluster_ca.content }}
      server: https://{{ k3s_server_url.split('://')[1] }}
    name: homelab-k3s-cluster
contexts:
  - context:
      cluster: homelab-k3s-cluster
      user: {{ item.item.name }}
    name: homelab-k3s-cluster
current-context: homelab-k3s-cluster
users:
  - name: {{ item.item.name }}
    user:
      token: {{ item.resources[0].data.token | b64decode }}
